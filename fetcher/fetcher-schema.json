{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Fetcher Configuration Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "license": {
            "type": "string"
        },
        "arch": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "maintainer": {
            "type": "string"
        },
        "bindir": {
            "type": "string",
            "default": "/usr/bin"
        },
        "binaries": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "gh_repo": {
            "type": "string",
            "description": "The GitHub repository to fetch data from",
            "examples": ["starship/starship"]
        },
        "gh_asset_regex": {
            "type": "string",
            "description": "Regex of asset name to download",
            "examples": ["starship-x86_64-unknown-linux-gnu\\.tar\\.gz"]
        },
        "strip_components": {
            "type": "integer",
            "default": 0,
            "description": "Number of leading path components to strip from the archive"
        },
        "pkgtypes": {
            "oneOf": [
                {
                    "type": "string",
                    "enum": ["deb", "apk"]
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["deb", "apk"]
                    }
                }
            ],
            "description": "The type of package to create"
        }
    },
    "additionalProperties": false
}